<%= form_for @tour, :html => { :multipart => true } do |f| %>
<% if @tour.errors.any? %>
<div id="errors">
  <h2><%= pluralize(@tour.errors.count, "error") %> prevented this tour from saving:</h2>
  <ul>
    <% @tour.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= f.file_field :gambar %>
<p>
  <%= f.label :judul %><br>
	<%= f.text_field :judul %>
</p>
<p>
	<%= f.label :category_id %><br>
	<%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Pilih Kategori" } %>
</p>
<p>
	<%= f.label :latitude %><br>
	<%= f.text_field :latitude %>
</p>
<p>
	<%= f.label :longitude %><br>
	<%= f.text_field :longitude %>
</p>
<p>
	<%= f.label :konten %><br>
	<%= f.text_area :konten %>
</p>
<%= f.submit %>
<% end %>