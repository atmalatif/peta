<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><strong><%= review.username %></strong></p>
    <p class="comment_body"><%= review.body %></p>
    <p class="comment_time"><%= time_ago_in_words(review.created_at) %> ago</p> 
  </div>
  <% if user_signed_in? %>
  <p><%= link_to 'Delete', [review.tour, review], method: :delete, class: "button", data: { confirm: 'Are you sure?'} %></p>
  <% end %>
</div>